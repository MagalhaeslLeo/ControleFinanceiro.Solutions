<div class="modal fade" id="modalConsultDespesa" tabindex="-1" role="dialog" aria-labelledby="modalDespesaLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">

                <div class="row">
                    <form id="frmDespesa">
                        <div class="modal-header">
                            <br />
                            <h2 class="text-dark font-weight-bold">Dados da Despesa</h2>
                            <hr /> <br />
                        </div>
                        <div class="modal-body">
                            <div class="col-lg-12">
                                <div class="card card-custom">

                                    <input type="hidden" name="id" id="Id" value="@ViewBag.Id" />
                                    <input type="hidden" name="action" id="action" value="@ViewBag.Action" />

                                    <div class="card-body">

                                        <div class="row form-group">

                                            <div class="col-4">
                                                <label>Descrição</label>
                                                <input class="form-control readOnly" type="text" name="descricao" id="descricao" />
                                            </div>

                                            <div class="col-4">
                                                <label>Período</label>
                                                <input name="periodo" class="form-control btnaction readOnly" type="text" id="periodo" />
                                            </div>

                                            <div class="col-4">
                                                <label>Valor (R$)</label>
                                                <input name="valor" class="form-control btnaction readOnly" type="text" data-inputmask="'alias': 'currency', 'prefix': '',
                                                'groupSeparator': '.', 'radixPoint': ',', 'digits': 2" placeholder="(R$): " id="valor" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="card-footer">
                        <a id="btnCancelar" class="btn btn-text-danger btn-hover-light-danger font-weight-bold mr-2 voltar">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Despesa/ListaDespesa.js"></script>
@section Scripts{
    <script src="~/js/Despesa/ListaDespesa.js"></script>
}