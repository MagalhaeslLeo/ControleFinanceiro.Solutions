@model IEnumerable<ControleFinanceiro.Service.ServiceEntity.DespesaService>
@{
    ViewData["Title"] = "Lista de despesa";
}
<h2> Lista de despesas</h2>
<div class="d-flex justify-content-end">
    <button data-target="#createModal" data-toggle="modal" class="btn btn-success btn-create-despesa showModalButton4" data-url="@Url.Action("CreateDespesa")">Nova despesa</button>
</div>
<table class="tabeladespesa">
    <thead>
        <tr>
            <th class="th-display">
                @Html.DisplayName("Descrição")
            </th>
            <th class="th-display">
                @Html.DisplayName("Data da despesa")
            </th>
            <th class="th-display">
                @Html.DisplayName("Valor")
            </th>
            <th class="th-display">
                @Html.DisplayName("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="descricao">
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td class="periodo">
                    @Html.DisplayFor(modelItem => item.periodo)
                </td>
                <td class="valor">
                    @Html.DisplayFor(modelItem => item.valor)
                </td>
                <td class="btn-opcao">
                    <a data-toggle="tooltip" data-placement="top" data-original-title="Editar" data-target="#editModal_@item.Id" class="showModalButton3 btn btn-primary" data-url="@Url.Action("EditDespesa", new { id = item.Id})'">
                        <i class="bi bi-pencil-square h3"></i>
                    </a>
                    @await Html.PartialAsync("EditDespesa", item)
                    <a class="showModalButton2 btn btn-secondary" data-toggle="tooltip" data-placement= "top" data-original-title="Consultar" data-target="#consultModal_@item.Id" data-url="@Url.Action("ConsultDespesa", new { id = item.Id})'">
                        <i class="bi bi-card-checklist h3"></i>
                    </a>
                    @await Html.PartialAsync("ConsultDespesa", item)
                    <a class="showModalDelete btn btn-danger" data-toggle="tooltip" data-placement="top" data-original-title="Excluir" data-target="#confirmDeleteModal_@item.Id" data-url="@Url.Action("DeleteDespesa", new { id = item.Id })'">
                        <i class="bi bi-trash h3"></i>
                    </a>
                    @await Html.PartialAsync("DeleteDespesa", item)
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("CreateDespesa", new ControleFinanceiro.Service.ServiceEntity.DespesaService())